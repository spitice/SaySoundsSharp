<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <Target Name="CopyPlugin" AfterTargets="Build">
    <Message Text="Copying the plugin files to CounterStrikeSharp plugins directory" Importance="High" />
    <Error Text="The 'CS2_SERVER_DIR' property must be set on the command line. You can set it as an EnvVar." Condition="'$(CS2_SERVER_DIR)' == ''" />
    <Copy SourceFiles="$(TargetDir)$(ProjectName).deps.json;$(TargetDir)$(ProjectName).dll;$(TargetDir)$(ProjectName).pdb" DestinationFolder="$(CS2_SERVER_DIR)\game\csgo\addons\counterstrikesharp\plugins\$(ProjectName)" />
    <Message Text="Successfully the copied plugin files" Importance="High" />
  </Target>

  <ItemGroup>
    <PackageReference Include="CounterStrikeSharp.API" Version="1.0.244" />
  </ItemGroup>

</Project>
